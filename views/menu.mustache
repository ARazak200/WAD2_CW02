<html>
{{> sections/header}}

<body>
    {{> sections/nav}}

    <div class="container">
        <h1>{{title}}</h1>
        <!--Layout for each dish-->
        {{#dishes}}
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{DishName}}</h4>
                <p class="card-text">
                    {{DishDescription}}
                </p>
                <p class="card-text">
                    {{DishIngredients}}
                </p>
                <div class="card-footer">
                    {{DishPrice}}
                </div>
            </div>
            {{/dishes}}
            <!--Display when no dishes are shown-->
            {{^dishes}}
            <p>No dishes yet.</p>
            {{/dishes}}
        </div>
    </div>

</body>
{{> sections/footer}}

</html>