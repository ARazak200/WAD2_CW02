<html>

{{> sections/header}}

<body>
    {{> sections/nav}}

    <div class="container">
        <div class="text-center">
            <h1>{{title}}</h1>
            <img src="#" alt="banner" width="200" height="150">
        </div>

        <div class="text-right" style="margin-bottom: 1em;">
            {{^user}}
            <a id="login" href="/login" class="btn btn-primary">
                Sign in
            </a>

            {{/user}}
            {{#user}}
            <a id="logout" href="/logout" class="btn btn-primary">
                Sign out
            </a>
            {{/user}}
        </div>
        <div class="text-right">
            <a href="/new" class="btn btn-primary">
                Write in the guestbook
            </a>
        </div>

    </div>


    {{#entries}}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">{{subject}}</h4>
            <p class="card-text">
                {{contents}}
            </p>
            <div class="card-footer">
                Written by <a href="/posts/{{author}}">{{author}}</a> , on {{published}}
            </div>
        </div>
        {{/entries}}

        {{^entries}}
        No entries yet.
        {{/entries}}
</body>

{{> sections/footer}}

</html>