<html>
{{> sections/header}}
{{> sections/nav}}

<body>

    <!--container section-->
    <div class="container overflow-hidden">
        <!--jumbotron section-->
        <div class="jumbotron jumbotron-fluid">
            <h2>Add a new Dish</h2>


            <div class="text-right" style="margin-bottom: 1em;">
                {{^user}}
                <a id="login" href="/login" class="btn btn-primary"
                    style="background-color: #A14C4C; border-color:#A14C4C;">
                    Sign in
                </a>
                {{/user}}
                {{#user}}

                <a id="logout" href="/logout" class="btn btn-primary"
                    style="background-color: #A14C4C; border-color:#A14C4C;">
                    Sign out
                </a>
                {{/user}}

                <a href="/staff" class="btn btn-primary" style="background-color: #A14C4C; border-color:#A14C4C;">
                    Staff Area
                </a>
            </div>

        </div>
        <!--jumbotron section-->
        <!--form section-->
        <form method="post" role="form" action="/new">
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Enter a subject line"
                    required>
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter a subject line"
                    required>
            </div>
            <div class="form-group">
                <label for="contents">Entry text</label>
                <textarea class="form-control" id="contents" name="contents" placeholder="Enter your comments here."
                    rows="3" required>
                </textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Post entry" class="btn btn-primary"
                    style="background-color: #A14C4C; border-color:#A14C4C;">
            </div>
        </form>
        <!--form section-->
    </div>
    <!--container section-->
</body>